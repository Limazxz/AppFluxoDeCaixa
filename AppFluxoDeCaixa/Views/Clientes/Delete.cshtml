@model AppFluxoDeCaixa.Models.Clientes

@{
    ViewData["Title"] = "Deletar Clientes";
}

<h1 class="display-4 text-light text-center">Deletar Cadastro de CLientes</h1>

<h3 class="mt-3 mb-3">Deseja excluir esse cadastro?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.ClientesNome)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.ClientesNome)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-9">
            @Model.Email
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-3">
            @Html.DisplayNameFor(model => model.Celular)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.Celular)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.CpfCnpj)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.CpfCnpj)
        </dd>

        <dt class="col-3">
            @Html.DisplayNameFor(model => model.DataNascFundacao)
        </dt>
        <dd class="col-9">
            @Html.DisplayFor(model => model.DataNascFundacao)
        </dd>



    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClientesId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn-outline-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>
